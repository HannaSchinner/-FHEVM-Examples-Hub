{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": ["./scripts/**/*.ts", "./test/**/*.ts", "./typechain-types/**/*.ts"],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}
